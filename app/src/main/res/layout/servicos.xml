<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:backgroundTint="@color/light_grey"
    android:elevation="2dp"
    app:cardElevation="0dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgServico"
            android:layout_width="180dp"
            android:layout_height="130dp"
            android:padding="5dp"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/prestador" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="25sp"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tituloServico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10sp"
                android:text="Mr. Plumber"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/categoriaServico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Encanador"
                android:textColor="@color/grey" />

            <TextView
                android:id="@+id/cidadeServico"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="30sp"
                android:text="Bocaina - SP"
                android:textColor="@color/grey" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>